<%- include parts/header.ejs %>

<style>
    .showSlide {
        display: none;
    }

    .showSlide img {
        width: 50%;
    }

    @media only screen and (max-width: 600px) {
        .showSlide img {
            width: 100%;
        }
    }

    .slidercontainer {
        max-width: 1000px;
        position: relative;
        margin: auto;
        padding-bottom: 5%;
    }

    .left, .right {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        transition: 0.6s ease;
    }

    .left svg,.right svg{
        font-size: 25px;
        color: rgba(196, 142, 42, 0.93);
    }

    .left{
        padding-left: 5%;
        left: 0;
    }

    .right {
        padding-right: 5%;
        right: 0;
    }

    .left:hover, .right:hover {
        background-color: rgba(115, 115, 115, 0.8);
    }

    .content {
        color: #eff5d4;
        font-size: 30px;
        padding: 8px 12px;
        position: absolute;
        top: 10px;
        width: 100%;
        text-align: center;
    }

    /* Fading animation */
    .fade {
        -webkit-animation-name: fade;
        -webkit-animation-duration: 3s;
        animation-name: fade;
        animation-duration: 3s;
        display: block;
    }

    @-webkit-keyframes fade {
        from {
            opacity: .4
        }
        to {
            opacity: 1
        }
    }

    @keyframes fade {
        from {
            opacity: .4
        }
        to {
            opacity: 1
        }
    }
</style>

<p class="text-info">Om een beter beeld te hebben op de galerij draait u het beste uw mobiel</p>

<div class="slidercontainer">
    <div class="showSlide fade">
        <img src="images/fotogalerij/0.jpg"/>
        <div class="content">Slide1 heading</div>
    </div>
    <div class="showSlide fade">
        <img src="images/fotogalerij/1.jpg"/>
        <div class="content">Slide2 heading</div>
    </div>

    <div class="showSlide fade">
        <img src="images/fotogalerij/2.jpg"/>
        <div class="content">Slide3 heading</div>
    </div>
    <div class="showSlide fade">
        <img src="images/fotogalerij/3.jpg"/>
        <div class="content">Slide4 heading</div>
    </div>
    <!-- Navigation arrows -->
    <a class="left" onclick="nextSlide(-1)"><i class="fas fa-arrow-left"></i></a>
    <a class="right" onclick="nextSlide(1)"><i class="fas fa-arrow-right"></i></a>
</div>


<script>

    var slide_index = 1;
    var slides = document.getElementsByClassName("showSlide");

    displaySlides(slide_index);

    function nextSlide(n) {
        displaySlides(slide_index += n);
    }

    function currentSlide(n) {
        displaySlides(slide_index = n);
    }

    setInterval(function () {
        slide_index++;
        if (slide_index > slides.length) {
            slide_index = 1
        }
        if (slide_index < 1) {
            slide_index = slides.length
        }
        displaySlides(slide_index);
    },3000);

    function displaySlides(n) {
        var i;
        if (n > slides.length) {
            slide_index = 1
        }
        if (n < 1) {
            slide_index = slides.length
        }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        slides[slide_index - 1].style.display = "block";
    }


</script>

