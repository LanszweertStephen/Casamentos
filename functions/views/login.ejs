<%- include parts/header.ejs %>

<style>
    h1 {
        margin-top: 10%;
    }

    form {
        padding-top: 10%;
    }

    .form-group {
        border-top: solid 1px black;
        margin-top: 5%;
        padding: 5%;
        width: 60%;
        margin-left: auto;
        margin-right: auto;
    }

    .form-control {
        width: 80%;
    }

    .btn {
        background-color: rgba(196, 142, 42, 0.93);
        color: white;
        width: 100%;
        padding: 10%;
        font-size: 25px;
    }

    label {
        font-size: 30px;
        float: left;
        margin-right: 3%;
    }

    .link {
        text-decoration: underline;
        color: rgba(196, 142, 42, 0.93);
    }

</style>

<h1 class="h1 text-center">Log in first please</h1>

<p class="text-danger"><%= msg %></p>

<% if(formule != null){ %>
<form action="login?formuleId=<%= formule %>" method="post">
    <% } else{ %>
    <form action="login" method="post">

        <% } %>
        <div class="form-group">
            <label for="username"><i class="fas fa-user"></i></label>
            <input type="text" class="form-control" name="username" id="username" placeholder="Username">
        </div>
        <div class="form-group">
            <label for="password"><i class="fas fa-lock"></i></label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
        </div>
        <div class="form-group">
            <input type="submit" class="btn" value="Log in">
        </div>
    </form>
    <a class="link text-center" href="passwordForgotten">I forgot my password :o</a>


<%- include parts/footer.ejs %>