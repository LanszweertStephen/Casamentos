<%- include parts/headerProfile.ejs %>


  <p id="back">
    <i class="backButton fas fa-arrow-circle-left"></i>
  </p>

  <h1>Change your profile here</h1>

  <form action="#" method="post">
    <div class="form-group">
      <label for="email"><i class="fa fa-at"></i></label>
      <input type="email" class="form-control" name="email" id="email" value="Email">
    </div>
    <div class="form-group">
      <label for="password"><i class="fas fa-lock"></i></label>
      <input type="password" class="form-control" name="password" id="password" value="Password">
    </div>
    <div class="form-group">
      <label for="notifications"><i class="fas fa-bell"></i></label>
      <input class="checkbox" type="checkbox" name="notifications" id="notifications">
    </div>
    <div class="form-group">
      <input type="submit" class="btnProfile" name="change" value="Save changes" />
    </div>
  </form>

  <script src="https://www.gstatic.com/firebasejs/5.0.1/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/5.0.1/firebase-auth.js"></script>
  <script src="javascripts/authScript.js"></script>
  <script src="javascripts/goBackToAccount.js"></script>
  <%- include parts/footer.ejs %>
