<%- include parts/header.ejs %>

<style>
    .form-control{
        width: 80%;
        margin-left: auto;
        margin-right: auto;
    }
    label{
        color: white;
        width: 100%;
        text-align: center;
        background-color: rgba(196, 142, 42, 0.93);
        padding: 1%;
    }
    input{
        width: 80%;
    }

    .btn{
        background-color: rgba(196, 142, 42, 0.93);
        color: white;
        width: 50%;
        padding: 5%;
        font-size: 25px;
    }
    .icon{
        float: left;
        font-size: 30px;
        margin-left: 8px;
    }

</style>

<h1 class="h1 text-center">Vul hier nog enkele gegevens in</h1>

<form action="bestel" method="post">
    <div class="form-group">
        <label for="dag">Dé dag</label>
        <input class="form-control" type="date" id="dag" name="dag">
    </div>
    <div class="form-group">
        <label for="locatie">Dé locatie</label><div class="icon"><i class="fas fa-map-marker"></i></div>
        <input type="text" class="form-control" id="locatie" name="locatie">
    </div>
    <div class="form-group">
        <label for="opmerkingen">Eventuele extra vragen:</label>
        <textarea id="opmerkingen" name="opmerkingen" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn" value="Bestel">
    </div>
</form>

<%- include parts/footer.ejs %>