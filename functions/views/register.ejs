<%- include parts/header.ejs %>

<h1 class="h1 text-center">Register here</h1>
<p id="error" class="bg-danger">

</p>

<form id="signIn" action="login" method="post">
    <div class="form-group">
        <label for="email"><i class="fa fa-at"></i></label>
        <input type="email" class="form-control" name="email" id="email" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="password"><i class="fas fa-lock"></i></label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="retypPassword"><i class="fas fa-lock"></i></label>
        <input type="password" class="form-control" name="retypPassword" id="retypPassword" placeholder="Password again">
    </div>
    <div class="form-group">
        <input id="btnRegister" type="submit" class="btn" value="Register">
    </div>
</form>
<script src="https://www.gstatic.com/firebasejs/5.0.1/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/5.0.1/firebase-auth.js"></script>
<script src="javascripts/authScript.js"></script>
